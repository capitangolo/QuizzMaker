<div class="conatiner-fluid">
<div class="span3">&nbsp;</div>
<div class="span6" >
<form class="form-horizontal well" action="/login" method=post >
  <input type="hidden" name="_method" value="put" />
  <fieldset>
    <legend>Log-in</legend>
    <div class="control-group">
      <label class="control-label" for="account[email]"> E-mail </label>
      <div class="controls">
        <div class="input-prepend">
            <span class="add-on">@</span>
            <input class="span2" name="account[email]" required id="account[email]" size="16" type="text" />
        </div>
        <p class="help-block"> Enter your e-mail address </p>
      </div>

      <label class="control-label" for="account[password]"> Password </label>
      <div class="controls">
        <input type=password name="account[password]" />
      </div>
    </div>
  </fieldset>
  <button class="btn btn-large btn-primary" type="submit"> Log in </button>
</form>
</div>
</div>
